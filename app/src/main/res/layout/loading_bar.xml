<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#ffb8b8b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="@string/CommonUI_Messages_Label_Loading"
        android:layout_marginEnd="4dp"/>
    <ImageView
        android:id="@+id/dotImage1"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@drawable/progress_dot"
        android:contentDescription="@string/CommonUI_Features_Label_LoadingDot"
        android:layout_marginEnd="4dp"/>
    <ImageView
        android:id="@+id/dotImage2"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@drawable/progress_dot"
        android:contentDescription="@string/CommonUI_Features_Label_LoadingDot"
        android:layout_marginEnd="4dp"/>
    <ImageView
        android:id="@+id/dotImage3"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@drawable/progress_dot"
        android:contentDescription="@string/CommonUI_Features_Label_LoadingDot"
        android:layout_marginEnd="4dp"/>
</LinearLayout>
