<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="35dp"
        android:layout_height="35dp"
        layout="@layout/include_rbx_progress_bar"/>
    <com.roblox.client.components.RbxTextView
        android:textSize="@dimen/splashLoadingTextSize"
        android:textColor="@color/black"
        android:gravity="top"
        android:id="@+id/splash_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/CommonUI_Messages_Label_Loading"/>
</LinearLayout>
