<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/incoming_call_container"
    android:background="@color/dark_slate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/incoming_call_username_textview"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Feature_Call_Label_RobloxCall"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/icon_incoming_call"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/incoming_call_headshot_imageview"
        android:background="@drawable/incoming_call_headshot_background"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="256dp"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_gravity="start|center_vertical"
            android:id="@+id/incoming_call_decline_button"
            android:background="@drawable/incoming_call_decline_call_background"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_decline"
            android:scaleType="center"
            android:tint="@drawable/incoming_call_button_color"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_gravity="end|center_vertical"
            android:id="@+id/incoming_call_accept_button"
            android:background="@drawable/incoming_call_accept_call_background"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_phone"
            android:scaleType="center"
            android:tint="@drawable/incoming_call_button_color"/>
    </FrameLayout>
</LinearLayout>
