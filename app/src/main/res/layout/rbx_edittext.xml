<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/tableWrapper"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="80">
    <LinearLayout
        android:id="@+id/rbxEditTextTopLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="55">
        <EditText
            android:id="@+id/rbxEditTextTextBox"
            android:background="@drawable/rbx_bg_flat_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/rbxEditTextBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25">
        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/rbxEditTextBottomLabel"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
</LinearLayout>
