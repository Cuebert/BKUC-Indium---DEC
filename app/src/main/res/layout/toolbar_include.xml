<?xml version="1.0" encoding="utf-8"?>
<com.roblox.client.components.RobloxToolbar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/RbxBlue3"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mainToolbarHeight"
    android:minHeight="@dimen/mainToolbarHeight"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:subtitleTextAppearance="@style/RobloxCompatTheme.Toolbar.SubTitleText"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:titleTextAppearance="@style/RobloxCompatTheme.Toolbar.TitleText">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/toolbar_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="10sp"
            android:id="@+id/toolbar_subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:layout_below="@+id/toolbar_title"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</com.roblox.client.components.RobloxToolbar>
