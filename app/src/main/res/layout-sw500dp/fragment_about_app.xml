<?xml version="1.0" encoding="utf-8"?>
<com.roblox.client.components.RbxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fragment_about_background"
    android:background="@color/RbxGray3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_weight="0"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/fragment_about_dialog_bg"
            android:background="@color/shell_dialog_background"
            android:padding="15dp"
            android:layout_width="800dp"
            android:layout_height="308dp">
            <ImageView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:src="@drawable/roblox_logo"
                android:scaleType="fitCenter"
                android:layout_weight="0"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/shell_text_normal"
                android:ellipsize="none"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CommonUI_Features_Label_LegalText"
                android:layout_weight="0"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"/>
            <com.roblox.client.AutoResizeTextView
                android:textSize="20sp"
                android:textColor="@color/shell_text_normal"
                android:ellipsize="none"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/fragment_about_terms_privacy"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"/>
            <com.roblox.client.AutoResizeTextView
                android:textSize="20sp"
                android:textColor="@color/shell_text_normal"
                android:ellipsize="none"
                android:gravity="center"
                android:id="@+id/fragment_about_baseURL"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"/>
            <com.roblox.client.AutoResizeTextView
                android:textSize="30sp"
                android:textColor="@color/shell_text_normal"
                android:ellipsize="none"
                android:gravity="center"
                android:id="@+id/fragment_about_user_agent"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:singleLine="true"
                android:layout_weight="0"
                android:textIsSelectable="true"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</com.roblox.client.components.RbxLinearLayout>
