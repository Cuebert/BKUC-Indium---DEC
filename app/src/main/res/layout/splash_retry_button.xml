<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/red"
        android:gravity="center"
        android:id="@+id/alertTitle"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CommonUI_Messages_Response_ConnectionError"/>
    <com.roblox.client.components.RbxButton
        android:enabled="true"
        android:id="@+id/reconnect_button"
        android:layout_width="250dp"
        android:layout_height="@dimen/landingButtonHeight"
        android:text="@string/CommonUI_Controls_Action_Retry"
        style="@style/Theme.Roblox.Button.Flat.White.Settings"/>
</LinearLayout>
