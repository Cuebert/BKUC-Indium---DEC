<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.roblox.client.components.RbxSearchView
        android:textSize="17sp"
        android:id="@+id/phone_prefix_search_view"
        android:background="@drawable/phone_prefix_item_back"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:iconifiedByDefault="false"
        android:queryHint="Country"
        android:queryBackground="@android:color/transparent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/phone_prefix_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_prefix_search_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>
