<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rbxGenderContainer"
        android:background="@drawable/rbx_bg_gender_full"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="55">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/rbxGenderBtnMaleBg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_male"/>
                <TextView
                    android:textSize="23sp"
                    android:textColor="@color/RbxGray4"
                    android:id="@+id/rbxGenderBtnMaleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.roblox.client.components.RbxButton
                android:id="@+id/rbxGenderBtnMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Theme.Roblox.Button.Gender.Male"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <View
                android:background="@color/RbxGray4"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/rbxGenderBtnFemaleBg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_female"/>
                <TextView
                    android:textSize="23sp"
                    android:textColor="@color/RbxGray4"
                    android:id="@+id/rbxGenderBtnFemaleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.roblox.client.components.RbxButton
                android:id="@+id/rbxGenderBtnFemale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Theme.Roblox.Button.Gender.Female"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25">
        <com.roblox.client.components.RbxTextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/rbxEditTextHint"
            android:textColor="@color/RbxRed2"
            android:id="@+id/rbxGenderBottomText"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"/>
    </LinearLayout>
</LinearLayout>
